<h1>Create new post</h1>

<%= form_with model: @post do |form| %>
<div>
    <%= form.label :title, "Post title:"%>
    <%= form.text_field :title %>

</div>
<br>
<div>
    <%= form.label :body, "Write post"%>
    <%= form.text_area :body %>
</div>
    <%= form.submit "Create" %>
<% end %>

<%=link_to "Home", posts_index_path %>